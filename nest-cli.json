{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "library": {
      "type": "library",
      "root": "libs/library",
      "entryFile": "index",
      "sourceRoot": "libs/library/src",
      "compilerOptions": {
        "tsConfigPath": "libs/library/tsconfig.lib.json"
      }
    },
    "auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.lib.json"
      }
    },
    "permissions": {
      "type": "library",
      "root": "libs/permissions",
      "entryFile": "index",
      "sourceRoot": "libs/permissions/src",
      "compilerOptions": {
        "tsConfigPath": "libs/permissions/tsconfig.lib.json"
      }
    }
  }
}